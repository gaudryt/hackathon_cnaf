<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#179087">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profil_user_page2" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:text="M. Durand Francis \n allocataire à la caf depuis :"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textAlignment="center" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="                                 "
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_barre_annee_allocataire_page2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="148dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="      2008"
                android:id="@+id/textView3"
                android:layout_weight="0.01"
                android:textColor="#FFFFFF"
                android:layout_gravity="center" />
        </LinearLayout>

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Découvrir mon histoire en détails"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:textColor="#d02661" />

</LinearLayout>